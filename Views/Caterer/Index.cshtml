 @model IEnumerable<WebApplication1.Models.Caterer>

@{
    Layout = "CatererLayout";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1>Welcome to <span>Restaurantly</span></h1>
                <h2>Delivering great food for more than 18 years!</h2>

                <div class="btns">
                    <a href="#bookings" class="btn-menu animated fadeInUp scrollto">View Profile</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->






<main id="main">
    <section id="bookings" class="bookings">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Your Profile</h2>
                <p>Manage Your Profile</p>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead class="bg-gold text-white">
                        <tr class="text-right">
                            <th style="text-align: left;">Name</th>
                            <th style="text-align: left;">Category</th>
                            <th style="text-align: left;">Location</th>
                            <th style="text-align: left;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="table-name">@item.Name</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Location</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Caterer" asp-route-id="@item.Id" class="btn btn-sm btn-outline-gold me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <a asp-action="Logout" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Logout
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>
