@model WebApplication1.Models.Menu

@{
    Layout = "AdminLayout";
}



<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1>Welcome to <span>Restaurantly</span></h1>
                <h2>Delivering great food for more than 18 years!</h2>

                <div class="btns">
                    <a href="#contact" class="btn-menu animated fadeInUp scrollto">Delete Caterer Menus</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->




<main id="main">
    <section class="contact">
        <div class="container text-gold">
            <div class="section-title text-center">
                <h2>Delete Menu</h2>
                <p>Are you sure you want to delete this menu?</p>
            </div>

            <div class="form-group">
                <label>Menu ID</label>
                <p class="form-control-plaintext">@Model.Id</p>
            </div>

            <div class="form-group">
                <label>Menu Title</label>
                <p class="form-control-plaintext">@Model.MenuTitle</p>
            </div>

            <div class="form-group">
                <label>Description</label>
                <p class="form-control-plaintext">@Model.MenuDescription</p>
            </div>

            <div class="form-group">
                <label>Price</label>
                <p class="form-control-plaintext">@Model.Price.ToString("C")</p> <!-- Format price as currency -->
            </div>

            <div class="form-group">
                <label>Number of People</label>
                <p class="form-control-plaintext">@Model.NumberOfPeople</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.MenuImage))
            {
                <div class="form-group text-center">
                    <img src="~/UploadImage/@Model.MenuImage" alt="Menu Image" class="img-fluid rounded" style="max-width: 150px; height: auto;" />
                    <p>Current Image</p>
                </div>
            }

            <div class="text-center mt-4">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirmDelete();">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="Index" asp-controller="Menu" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
</main>


<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this menu? This action cannot be undone.");
    }
</script>