@model IEnumerable< WebApplication1.Models.Menu>

@{
    Layout = "CatererLayout";
}


<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1>Welcome to <span>Restaurantly</span></h1>
                <h2>Delivering great food for more than 18 years!</h2>

                <div class="btns">
                    <a href="#bookings" class="btn-menu animated fadeInUp scrollto">View Caterer Menus</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->




<main id="main">
    <section id="bookings" class="bookings">
        <div class="container" data-aos="fade-up">

            <!-- Alert Messages -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="section-title">
                <h2>Menu List</h2>
                <p>Manage Existing Menus</p>
            </div>


            <div class="text-end mb-3">
                <a asp-action="AddMenu" asp-controller="Menu" class="btn btn-gold me-3">
                    <i class="bi bi-plus-square"></i> Add Menu
                </a>
            </div>


            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead class="bg-gold text-white">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>People</th>
                            <th>Price</th>
                            <th>Caterer</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="table-name">@item.MenuTitle</td>
                                <td>@item.MenuDescription</td>
                                <td class="text-gold">@item.NumberOfPeople</td>
                                <td class="text-gold">@item.Price</td>
                                <td class="table-name">@item.Caterer.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-gold me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>
