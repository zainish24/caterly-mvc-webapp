@model WebApplication1.Models.CatererCategory

@{
    Layout = "AdminLayout";
}


<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1>Welcome to <span>Restaurantly</span></h1>
                <h2>Delivering great food for more than 18 years!</h2>

                <div class="btns">
                    <a href="#contact" class="btn-menu animated fadeInUp scrollto">Delete Caterer</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->

<main id="main">
    <section class="contact ">
        <div class="container text-gold">
            <div class="section-title text-center">
                <h2>Delete Category</h2>
                <p>Are you sure you want to delete this category?</p>
            </div>

            <div class="form-group">
                <label>Category ID</label>
                <p class="form-control-plaintext">@Model.Id</p>
            </div>

            <div class="form-group">
                <label>Category</label>
                <p class="form-control-plaintext">@Model.Name</p>
            </div>

            <div class="text-center mt-4">
                <form asp-action="DeleteConfirmed" asp-controller="Admin" method="post" onsubmit="return confirmDelete();">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="Category" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
</main>




<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this caterer? This action cannot be undone.");
    }
</script>
