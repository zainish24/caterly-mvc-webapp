@model WebApplication1.Models.EditProfileModel

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1>Welcome to <span>Restaurantly</span></h1>
                <h2>Delivering great food for more than 18 years!</h2>

                <div class="btns">
                    <a href="#contact" class="btn-menu animated fadeInUp scrollto">Edit Your Profile</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->

<main id="main">
    <section class="contact">
        <div class="container text-gold">
            <div class="section-title">
                <h2>Edit Profile</h2>
            </div>

            <form asp-action="EditProfile" asp-controller="Home" method="post" class="php-email-form">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Contact">Contact</label>
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender">Gender</label>
                    <select class="form-control" asp-for="Gender" id="gender">
                        <option value="">Select Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Profile" asp-controller="Home" class="btn btn-secondary">Back to Profile</a>
                </div>
            </form>
        </div>
    </section>
</main>