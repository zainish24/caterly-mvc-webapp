@model IEnumerable< WebApplication1.Models.Message>


<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container position-relative text-center text-lg-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1>Welcome to <span>Restaurantly</span></h1>
                <h2>Delivering great food for more than 18 years!</h2>

                <div class="btns">
                    <a href="#messages" class="btn-menu animated fadeInUp scrollto">View Messages</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->

<main id="main">
    <section id="messages" class="messages">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Message List</h2>
                <p>View Existing Messages</p>
            </div>
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead class="bg-gold">
                        <tr>
                            <th>Customer Name</th>
                            <th>Caterer Name</th>
                            <th>Category Name</th>
                            <th>Date</th>
                            <th>Sender Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td class="table-name">@message.Name</td>
                                <td>@message.Caterer.Name</td>
                                <td>@message.Category.Name</td>
                                <td>@message.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                <td class="table-name">@message.SenderType</td>
                                <td>
                                    <a href="@Url.Action("MessageDetails", "Home", new { id = message.Id })" class="btn btn-sm btn-outline-gold">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a href="@Url.Action("Message", "Home", new { id = message.Id })" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-reply"></i> Reply
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>


